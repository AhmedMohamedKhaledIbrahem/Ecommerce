<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addressCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        style="@style/customCardStyle"
        android:clickable="true"
        android:visibility="visible"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999">

        <LinearLayout
            android:id="@+id/toolsBarAddressLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/selected_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="@string/selected_address_icon"
                android:src="@drawable/verify_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/editAddressImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:contentDescription="@string/edit_address"
                android:src="@drawable/edit_icon"

                />

            <ImageView
                android:id="@+id/deleteAddressImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:contentDescription="@string/delete_address"
                android:src="@drawable/round_close_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">
            <TextView
                android:id="@+id/fullNameAddressTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailAddressTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneNumberTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/streetAddressTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countryTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cityTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/postCodeTextView"
                style="@style/headLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>