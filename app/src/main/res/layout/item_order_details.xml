<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/OrderDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/itemOrderDetailsFrameLayout"
        style="@style/customCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/orderItemImage"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="37dp"

            android:contentDescription="@string/product_image"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay = "@style/roundedCornerProductStyle"
            android:src="@drawable/round_placeholder_24" />

        <TextView
            android:id="@+id/orderItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="30dp"
            android:text=""
            style="@style/paragraphStyle"
            android:textColor="?attr/colorOnSecondary"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/orderItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="48dp"
            android:text=""
            style="@style/paragraphStyle"
            android:textColor="?attr/colorOnSecondary"
            android:textStyle="bold"
            />



    </com.google.android.material.card.MaterialCardView>


</LinearLayout>