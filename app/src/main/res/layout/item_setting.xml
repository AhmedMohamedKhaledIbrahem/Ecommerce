<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/customCardStyle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        >

        <ImageView
            android:id="@+id/settingItemImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/setting_item_image"
            android:scaleType="center"
            android:src="@drawable/round_placeholder_24" />
        <TextView
            android:id="@+id/settingItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?attr/colorOnSecondary"
            style="@style/headLine1"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            />
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/settingItemSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            />


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>