<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance" >@style/CustomShapeAppearance</item>
    </style>
    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="headLine1">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- H2 Style -->
    <style name="headLine2">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Paragraph Style -->
    <style name="paragraphStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>